.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  padding-top: 40rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.avatar-wrapper {
  margin: 10px 0;
}

.nickname-input-wrapper {
  display: flex;
  align-items: center;
  margin: 10px;
}

.nick-name-input {
  border: 1px solid #f1f1f1;
  padding: 5px;
  text-align: center;
  width: 60%;
}

.confirm-button.small-button {
  padding: 5px;
  margin-left: 10px;
  font-size: 24rpx;
  height: 64rpx;
  line-height: 64rpx;
}

/* 绝对定位容器 */
.float-action, .float-action2 {
  position: fixed;
  bottom: 170rpx; /* 控制底部距离 */
  right: 80rpx;  /* 控制右侧距离 */
  width: 100rpx;
  height: 100rpx;
  z-index: 1000;
}

/* 第一个 icon 按钮的位置 */
.float-action2 {
  bottom: 330rpx; /* 相对于另一个 icon 的垂直间距 */
}

.float-action img, .float-action2 img {
  width: 100%;
  height: 100%;
}
