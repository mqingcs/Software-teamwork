.timeline {
  padding: 0;
  list-style: none;
  position: relative;
  z-index: 100;
}

/* The line */
.timeline:before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 10px;
  background: #afdcf8;
  left: 10%;
  margin-left: -10px;
  z-index: 100;
}

.cbp_tmtimeline_li {
  position: relative;
}

/* Right content */
.timeline_tmlabel {
  margin: 0 0 15px 15%;
  background: #b6e4f4;
  padding: 2em;
  font-size: 1.2em;
  font-weight: 300;
  position: relative;
  border-radius: 5px;
}

/* The triangle */
.timeline_tmlabel:after {
  right: 100%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
  border-right-color: #b6e4f4;
  border-width: 10px;
  top: 5px;
}

/* The icons */
.timeline_tmicon {
  width: 15px;
  height: 15px;
  text-transform: none;
  font-size: 1em;
  line-height: 15px;
  -webkit-font-smoothing: antialiased;
  position: absolute;
  color: #fff;
  background: #46a4da;
  border-radius: 50%;
  box-shadow: 0 0 0 5px #afdcf8;
  text-align: center;
  left: 10%;
  top: 5px;
  margin: 0 0 0 -12.5px;
  z-index: 100;
}

/* 按钮区域布局 */
.buttons-container {
  position: fixed;
  right: 80rpx; /* 距离右侧的距离 */
  bottom: 170rpx; /* 将按钮稍微向上移动一些，避免过于靠近底部 */
  display: flex; /* 使用 flex 布局 */
  flex-direction: column; /* 让按钮竖直排列 */
  gap: 20rpx; /* 按钮之间的间隔 */
  z-index: 1000; /* 确保按钮处于页面的最上层 */
}

/* 每个按钮的样式 */
.button {
  width: 120rpx; /* 调整按钮的宽度 */
  height: 120rpx; /* 调整按钮的高度 */
  display: flex; /* 使用 flex 使图标居中 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

/* 按钮的图标 */
.button-image {
  width: 100rpx; /* 调整图标大小 */
  height: 100rpx; /* 调整图标大小 */
}





